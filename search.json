---
layout: null
---
[
  {%- assign all_docs = "" | split: "" -%}
  
  {%- for item in site.humanidades -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.ciencias -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.tecnologia -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.negocios -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.salud -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.idiomas -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.hobbies -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.biblioteca -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.proyectos -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for item in site.bitacora -%}
    {%- assign all_docs = all_docs | push: item -%}
  {%- endfor -%}
  
  {%- for doc in all_docs -%}
  {
    "title": {{ doc.title | jsonify }},
    "url": {{ doc.url | relative_url | jsonify }},
    "content": {{ doc.content | strip_html | truncatewords: 100 | jsonify }},
    "category": {{ doc.category | jsonify }},
    "tags": {{ doc.tags | jsonify }},
    "collection": {{ doc.collection | jsonify }},
    "date": {{ doc.date | date: "%Y-%m-%d" | jsonify }}
  }{%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
]
